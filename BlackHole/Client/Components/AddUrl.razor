@inject IStringLocalizer<Texts> S

@if (_showField)
{
    <div>
        <InputText @ref="_inputText" @bind-Value="Url" placeholder="@S["Add the URL"]" DisplayName="Url" @onblur="CancelAddUrl" />
        <button class="btn btn-primary" title="@S["Add the URL"]" @onclick="FinalizeAddUrl">
            <i class="bi bi-plus-circle"></i>
        </button>
    </div>
}
else
{
    <button class="btn btn-primary" title="@S["Add the URL"]" @onclick="ShowField">
        <i class="bi bi-plus-square"></i>
    </button>
}